{
  "name": "@supabase-dx/cli",
  "version": "0.0.1",
  "description": "Supabase DX CLI - experimental developer experience tools",
  "type": "module",
  "bin": {
    "supa": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "build:binary": "bun build src/index.ts --compile --minify --outfile bin/supa --target=bun && codesign -s - -f bin/supa",
    "dev": "tsup --watch",
    "start": "node dist/index.js",
    "test": "vitest run",
    "lint": "eslint src --ext ts,tsx",
    "typecheck": "tsc --noEmit",
    "generate:api-types": "openapi-typescript ../docs/supabase-management-api-v1.json -o src/lib/api-types.ts",
    "docs:spec": "tsx scripts/export-spec.ts > spec.json",
    "docs:generate": "tsx scripts/generate-docs.ts"
  },
  "dependencies": {
    "@ariga/atlas": "^1.0.0",
    "@clack/prompts": "^1.0.0",
    "@electric-sql/pglite": "^0.3.15",
    "@electric-sql/pglite-socket": "^0.0.20",
    "@supabase/pg-delta": "1.0.0-alpha.2",
    "arg": "^5.0.2",
    "chalk": "^5.3.0",
    "chokidar": "^5.0.0",
    "ink": "^5.0.1",
    "ink-select-input": "^6.0.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "keytar": "^7.9.0",
    "pg": "^8.17.2",
    "react": "^18.2.0",
    "toml": "^3.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "jsonv-ts": "^0.10.1",
    "openapi-typescript": "^7.10.1",
    "pkg": "^5.8.1",
    "react-devtools-core": "^7.0.1",
    "tsup": "^8.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
